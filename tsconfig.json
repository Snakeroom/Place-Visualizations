{
	"compilerOptions": {
		"downlevelIteration": true,
		"esModuleInterop": true,
		"lib": [
			"es2022"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2015",
		"types": [
			"@types/debug",
			"@types/ejs",
			"@types/fs-extra",
			"@types/merge-deep",
			"@types/node"
		]
	}
}
